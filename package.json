{
  "name": "blackmagic-controller-packages",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "prepare": "husky",
    "dev": "run build:root --watch",
    "dev:demo": "yarn workspace @blackmagic-controller/web-demo start",
    "build": "run build:root",
    "build:root": "(rimraf packages/*/dist || true) && tsc --build tsconfig.build.json",
    "test": "run lint && run unit",
    "unit": "jest",
    "lint:raw": "eslint",
    "lint": "run lint:raw packages",
    "lint-fix": "run lint --fix",
    "bump": "lerna version --exact --conventional-commits --no-push -m \"chore(release): publish %s\"",
    "graduate": "run bump --conventional-graduate",
    "publish2": "run build && lerna publish from-package --pre-dist-tag next",
    "validate:dependencies": "yarn npm audit"
  },
  "lint-staged": {
    "*.{css,json,md,scss}": [
      "prettier --write"
    ],
    "*.{ts,tsx,js,jsx}": [
      "yarn lint:raw --fix"
    ]
  },
  "devDependencies": {
    "@companion-module/tools": "^2.1.1",
    "@tsconfig/node18": "^18.2.4",
    "@types/jest": "^29.5.14",
    "@types/node": "^18.19.74",
    "eslint": "^9.19.0",
    "eslint-plugin-n": "^17.15.1",
    "eslint-plugin-prettier": "^5.2.3",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-mock": "^29.7.0",
    "lerna": "^8.1.9",
    "lint-staged": "^15.4.3",
    "prettier": "^3.4.2",
    "rimraf": "^5.0.10",
    "snyk-nodejs-lockfile-parser": "^1.58.18",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "~5.5.4",
    "typescript-eslint": "^8.22.0",
    "usb": "^2.14.0"
  },
  "workspaces": [
    "packages/core",
    "packages/node",
    "packages/web",
    "packages/web-demo"
  ],
  "packageManager": "yarn@4.6.0"
}
