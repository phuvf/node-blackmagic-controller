{
  "name": "blackmagic-controller-packages",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "prepare": "husky",
    "dev": "run build:root --watch",
    "dev:demo": "yarn workspace @blackmagic-controller/web-demo start",
    "build": "run build:root",
    "build:root": "(rimraf packages/*/dist || true) && tsc --build tsconfig.build.json && run build:udev",
    "build:udev": "node ./scripts/regenerate-udev.mjs",
    "test": "run lint && run unit",
    "unit": "jest",
    "lint:raw": "eslint",
    "lint": "run lint:raw packages",
    "lint-fix": "run lint --fix",
    "bump": "lerna version --exact --conventional-commits --no-push -m \"chore(release): publish %s\"",
    "graduate": "run bump --conventional-graduate",
    "publish2": "run build && lerna publish from-package --pre-dist-tag next",
    "validate:dependencies": "yarn npm audit"
  },
  "lint-staged": {
    "*.{css,json,md,scss}": [
      "prettier --write"
    ],
    "*.{ts,tsx,js,jsx}": [
      "yarn lint:raw --fix"
    ]
  },
  "devDependencies": {
    "@companion-module/tools": "^2.4.0",
    "@tsconfig/node20": "^20.1.6",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.19.17",
    "eslint": "^9.36.0",
    "husky": "^9.1.7",
    "jest": "^30.1.3",
    "jest-mock": "^30.0.5",
    "lerna": "^9.0.0",
    "lint-staged": "^16.2.1",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.4.4",
    "ts-node": "^10.9.2",
    "typescript": "~5.9.2",
    "typescript-eslint": "^8.44.1",
    "udev-generator": "^1.0.1",
    "usb": "^2.16.0"
  },
  "workspaces": [
    "packages/core",
    "packages/node",
    "packages/web",
    "packages/web-demo"
  ],
  "packageManager": "yarn@4.10.3"
}
